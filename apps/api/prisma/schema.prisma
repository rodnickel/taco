// Prisma Schema para a Plataforma de Monitoramento
// Documentação: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUM: Team Member Role
// ============================================
enum TeamRole {
  ADMIN  // Gerencia time, membros e recursos
  EDITOR // Cria/edita monitors, alerts, status pages
  VIEWER // Apenas visualização
}

// ============================================
// ENUM: Status da Assinatura
// ============================================
enum SubscriptionStatus {
  ACTIVE    // Assinatura ativa
  CANCELED  // Cancelada (ainda pode ter acesso até o fim do período)
  PAST_DUE  // Pagamento atrasado
  TRIALING  // Período de teste
}

// ============================================
// MODELO: Plan (Plano de assinatura)
// ============================================
model Plan {
  id   String @id @default(cuid())
  name String // Free, Starter, Pro, Business
  slug String @unique // free, starter, pro, business

  // Preço em centavos (ex: 2900 = R$29,00)
  price Int @default(0)

  // Limites do plano
  maxMonitors        Int @default(3) @map("max_monitors") // -1 = ilimitado
  minIntervalSeconds Int @default(300) @map("min_interval_seconds") // 5 min = 300s
  historyDays        Int @default(7) @map("history_days") // Dias de histórico
  maxStatusPages     Int @default(1) @map("max_status_pages") // -1 = ilimitado
  maxTeamMembers     Int @default(1) @map("max_team_members") // -1 = ilimitado

  // Canais de alerta permitidos (JSON array: ["email", "telegram", "webhook", "whatsapp"])
  allowedChannels Json @default("[\"email\"]") @map("allowed_channels")

  // Status do plano
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relacionamentos
  subscriptions Subscription[]

  @@map("plans")
}

// ============================================
// MODELO: Subscription (Assinatura do time)
// ============================================
model Subscription {
  id String @id @default(cuid())

  // Status da assinatura
  status SubscriptionStatus @default(ACTIVE)

  // Período atual
  currentPeriodStart DateTime  @default(now()) @map("current_period_start")
  currentPeriodEnd   DateTime? @map("current_period_end")
  cancelAtPeriodEnd  Boolean   @default(false) @map("cancel_at_period_end")

  // Integração com gateway de pagamento (futuro)
  externalCustomerId     String? @map("external_customer_id") // ID do cliente no Asaas/Stripe
  externalSubscriptionId String? @map("external_subscription_id") // ID da assinatura no gateway

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relacionamento com Plan
  planId String @map("plan_id")
  plan   Plan   @relation(fields: [planId], references: [id])

  // Relacionamento com Team (1:1)
  teamId String @unique @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([planId])
  @@index([status])
  @@map("subscriptions")
}

// ============================================
// MODELO: User (Usuário do sistema)
// ============================================
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relacionamentos de Times
  ownedTeams  Team[]       @relation("TeamOwner")
  memberships TeamMember[]
  sentInvites TeamInvite[] @relation("InvitedBy")

  // Incidentes que o usuário reconheceu
  acknowledgedIncidents Incident[] @relation("AcknowledgedIncidents")

  @@map("users")
}

// ============================================
// MODELO: Team (Time/Equipe)
// ============================================
model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Owner é sempre ADMIN e não pode ser removido
  ownerId String @map("owner_id")
  owner   User   @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  // Relacionamentos
  members            TeamMember[]
  invites            TeamInvite[]
  monitors           Monitor[]
  monitorGroups      MonitorGroup[]
  alertChannels      AlertChannel[]
  statusPages        StatusPage[]
  incidents          Incident[]
  escalationPolicies EscalationPolicy[]
  maintenanceWindows MaintenanceWindow[]
  subscription       Subscription?

  @@index([ownerId])
  @@map("teams")
}

// ============================================
// MODELO: TeamMember (Membro da equipe)
// ============================================
model TeamMember {
  id       String   @id @default(cuid())
  role     TeamRole @default(VIEWER)
  joinedAt DateTime @default(now()) @map("joined_at")

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamento com User
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@map("team_members")
}

// ============================================
// MODELO: TeamInvite (Convite para equipe)
// ============================================
model TeamInvite {
  id        String    @id @default(cuid())
  email     String? // null = convite por link
  token     String    @unique @default(cuid())
  role      TeamRole  @default(VIEWER)
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  maxUses   Int       @default(1) @map("max_uses") // 0 = ilimitado
  useCount  Int       @default(0) @map("use_count")
  createdAt DateTime  @default(now()) @map("created_at")

  // Quem criou o convite
  invitedById String @map("invited_by_id")
  invitedBy   User   @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)

  // Qual time
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([token])
  @@index([email])
  @@map("team_invites")
}

// ============================================
// MODELO: MonitorGroup (Grupo de Monitores)
// ============================================
model MonitorGroup {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  monitors    Monitor[]
  statusPages StatusPageGroup[]

  @@index([teamId])
  @@map("monitor_groups")
}

// ============================================
// MODELO: Monitor (Serviço/URL a ser monitorado)
// ============================================
model Monitor {
  id              String   @id @default(cuid())
  name            String
  type            String   @default("http") // "http" | "webhook"
  url             String
  method          String   @default("GET")
  intervalSeconds Int      @default(300) @map("interval_seconds") // 5 minutos padrão
  timeout         Int      @default(30) // segundos
  expectedStatus  Int      @default(200) @map("expected_status")
  checkSsl        Boolean  @default(true) @map("check_ssl")
  active          Boolean  @default(true)
  alertsEnabled   Boolean  @default(true) @map("alerts_enabled") // Envia alertas quando status muda
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Configurações avançadas
  recoveryPeriod     Int     @default(180) @map("recovery_period") // Segundos que deve ficar UP para considerar recuperado
  confirmationPeriod Int     @default(0) @map("confirmation_period") // Quantas falhas consecutivas antes de marcar DOWN (0 = imediato)
  followRedirects    Boolean @default(true) @map("follow_redirects") // Seguir redirecionamentos HTTP
  requestBody        String? @map("request_body") // Body para POST/PUT/PATCH
  requestHeaders     Json?   @map("request_headers") // Headers customizados como JSON

  // Configurações específicas para tipo WEBHOOK
  webhookToken       String? @unique @map("webhook_token") // Token único para validar webhooks
  webhookSecret      String? @map("webhook_secret") // Secret para validar assinatura HMAC
  heartbeatInterval  Int?    @default(300) @map("heartbeat_interval") // Segundos entre heartbeats esperados (NULL = não usa heartbeat)
  lastHeartbeat      DateTime? @map("last_heartbeat") // Último heartbeat recebido

  // Campos de status atual (atualizados pelo worker)
  currentStatus    String?   @map("current_status") // "up" | "down" | "degraded"
  lastCheck        DateTime? @map("last_check")
  lastLatency      Int?      @map("last_latency") // em milissegundos
  consecutiveFails Int       @default(0) @map("consecutive_fails") // Contador de falhas consecutivas

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamento opcional com Group
  groupId String?       @map("group_id")
  group   MonitorGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  // Relacionamento opcional com Política de Escalonamento
  escalationPolicyId String?           @map("escalation_policy_id")
  escalationPolicy   EscalationPolicy? @relation("MonitorEscalationPolicy", fields: [escalationPolicyId], references: [id], onDelete: SetNull)

  // Relacionamentos
  checks              Check[]
  alerts              Alert[]
  statusPageMonitors  StatusPageMonitor[]
  incidents           Incident[]
  maintenanceMonitors MaintenanceMonitor[]

  @@index([teamId])
  @@index([groupId])
  @@index([escalationPolicyId])
  @@index([active])
  @@index([type])
  @@index([webhookToken])
  @@map("monitors")
}

// ============================================
// MODELO: Check (Resultado de uma verificação)
// ============================================
model Check {
  id         String   @id @default(cuid())
  status     String // "up" | "down" | "degraded"
  statusCode Int?     @map("status_code")
  latency    Int? // em milissegundos
  error      String?
  checkedAt  DateTime @default(now()) @map("checked_at")

  // Relacionamento com Monitor
  monitorId String  @map("monitor_id")
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@index([monitorId, checkedAt])
  @@map("checks")
}

// ============================================
// MODELO: AlertChannel (Canal de notificação)
// ============================================
model AlertChannel {
  id        String   @id @default(cuid())
  type      String // "email" | "webhook" | "slack" | "whatsapp" | "telegram"
  name      String
  config    Json // { email: "..." } ou { webhookUrl: "..." } ou { phone: "...", instanceName: "..." }
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  alerts             Alert[]
  escalationPolicies EscalationLevel[]

  @@index([teamId])
  @@map("alert_channels")
}

// ============================================
// MODELO: EscalationPolicy (Política de escalonamento)
// ============================================
model EscalationPolicy {
  id          String   @id @default(cuid())
  name        String
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  levels   EscalationLevel[]
  monitors Monitor[]         @relation("MonitorEscalationPolicy")

  @@index([teamId])
  @@map("escalation_policies")
}

// ============================================
// MODELO: EscalationLevel (Nível de escalonamento)
// ============================================
model EscalationLevel {
  id             String @id @default(cuid())
  level          Int // 1, 2, 3... (ordem de escalonamento)
  delayMinutes   Int    @default(0) @map("delay_minutes") // Delay antes de notificar (0 = imediato)
  repeatCount    Int    @default(1) @map("repeat_count") // Quantas vezes repetir antes de escalar
  repeatInterval Int    @default(5) @map("repeat_interval") // Intervalo em minutos entre repetições

  // Relacionamento com EscalationPolicy
  policyId String           @map("policy_id")
  policy   EscalationPolicy @relation(fields: [policyId], references: [id], onDelete: Cascade)

  // Relacionamento com AlertChannel
  channelId String       @map("channel_id")
  channel   AlertChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([policyId, level])
  @@index([policyId])
  @@map("escalation_levels")
}

// ============================================
// MODELO: PendingEscalation (Escalonamento pendente)
// ============================================
model PendingEscalation {
  id            String    @id @default(cuid())
  incidentId    String    @map("incident_id")
  currentLevel  Int       @default(1) @map("current_level")
  attemptCount  Int       @default(0) @map("attempt_count")
  nextAttemptAt DateTime  @map("next_attempt_at")
  acknowledged  Boolean   @default(false)
  completedAt   DateTime? @map("completed_at")
  createdAt     DateTime  @default(now()) @map("created_at")

  @@index([incidentId])
  @@index([nextAttemptAt])
  @@index([acknowledged])
  @@map("pending_escalations")
}

// ============================================
// MODELO: Alert (Alerta enviado)
// ============================================
model Alert {
  id      String   @id @default(cuid())
  type    String // "down" | "up" | "degraded"
  message String
  sentAt  DateTime @default(now()) @map("sent_at")

  // Relacionamento com Monitor
  monitorId String  @map("monitor_id")
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  // Relacionamento com AlertChannel
  alertChannelId String       @map("alert_channel_id")
  alertChannel   AlertChannel @relation(fields: [alertChannelId], references: [id], onDelete: Cascade)

  @@index([monitorId, sentAt])
  @@map("alerts")
}

// ============================================
// MODELO: StatusPage (Página de Status Pública)
// ============================================
model StatusPage {
  id          String   @id @default(cuid())
  slug        String   @unique // URL amigável: /status/[slug]
  name        String // Nome da página
  description String? // Descrição opcional
  logoUrl     String?  @map("logo_url") // URL do logo
  faviconUrl  String?  @map("favicon_url") // URL do favicon
  isPublic    Boolean  @default(true) @map("is_public") // Se a página é pública

  // Customização visual
  primaryColor    String @default("#10b981") @map("primary_color") // Cor primária (emerald-500)
  backgroundColor String @default("#09090b") @map("background_color") // Cor de fundo (zinc-950)

  // Configurações
  showUptime  Boolean @default(true) @map("show_uptime") // Mostrar porcentagem de uptime
  showLatency Boolean @default(true) @map("show_latency") // Mostrar latência
  showHistory Boolean @default(true) @map("show_history") // Mostrar histórico
  historyDays Int     @default(90) @map("history_days") // Dias de histórico

  // Domínio customizado (futuro)
  customDomain String? @map("custom_domain")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  monitors StatusPageMonitor[]
  sections StatusPageSection[]
  groups   StatusPageGroup[]

  @@index([teamId])
  @@index([slug])
  @@map("status_pages")
}

// ============================================
// MODELO: StatusPageSection (Seção/Grupo de monitors)
// ============================================
model StatusPageSection {
  id           String @id @default(cuid())
  name         String // Nome da seção (ex: "Serviços Principais", "APIs")
  displayOrder Int    @default(0) @map("display_order") // Ordem de exibição

  // Relacionamento com StatusPage
  statusPageId String     @map("status_page_id")
  statusPage   StatusPage @relation(fields: [statusPageId], references: [id], onDelete: Cascade)

  // Relacionamentos
  monitors StatusPageMonitor[]

  @@index([statusPageId])
  @@map("status_page_sections")
}

// ============================================
// MODELO: StatusPageMonitor (Relação N:N)
// ============================================
model StatusPageMonitor {
  id           String  @id @default(cuid())
  displayName  String? @map("display_name") // Nome customizado para exibir
  displayOrder Int     @default(0) @map("display_order") // Ordem de exibição

  // Relacionamento com StatusPage
  statusPageId String     @map("status_page_id")
  statusPage   StatusPage @relation(fields: [statusPageId], references: [id], onDelete: Cascade)

  // Relacionamento com Monitor
  monitorId String  @map("monitor_id")
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  // Relacionamento opcional com Section
  sectionId String?            @map("section_id")
  section   StatusPageSection? @relation(fields: [sectionId], references: [id], onDelete: SetNull)

  @@unique([statusPageId, monitorId])
  @@index([statusPageId])
  @@index([sectionId])
  @@map("status_page_monitors")
}

// ============================================
// MODELO: StatusPageGroup (Grupo na Status Page)
// ============================================
model StatusPageGroup {
  id           String  @id @default(cuid())
  displayName  String? @map("display_name") // Nome customizado para exibir
  displayOrder Int     @default(0) @map("display_order") // Ordem de exibição
  isExpanded   Boolean @default(true) @map("is_expanded") // Se mostra monitors por padrão

  // Relacionamento com StatusPage
  statusPageId String     @map("status_page_id")
  statusPage   StatusPage @relation(fields: [statusPageId], references: [id], onDelete: Cascade)

  // Relacionamento com MonitorGroup
  groupId String       @map("group_id")
  group   MonitorGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([statusPageId, groupId])
  @@index([statusPageId])
  @@map("status_page_groups")
}

// ============================================
// MODELO: Incident (Incidente)
// ============================================
model Incident {
  id         String    @id @default(cuid())
  title      String
  status     String // "ongoing" | "acknowledged" | "resolved"
  cause      String? // Causa do incidente (ex: "Timeout", "Status 500")
  startedAt  DateTime  @default(now()) @map("started_at")
  resolvedAt DateTime? @map("resolved_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // Acknowledge info
  acknowledgedAt DateTime? @map("acknowledged_at")
  acknowledgedById String? @map("acknowledged_by_id")
  acknowledgedBy   User?   @relation("AcknowledgedIncidents", fields: [acknowledgedById], references: [id])

  // Relacionamento com Monitor (quem gerou o incidente)
  monitorId String  @map("monitor_id")
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  updates IncidentUpdate[]

  @@index([monitorId])
  @@index([teamId])
  @@index([status])
  @@map("incidents")
}

// ============================================
// MODELO: IncidentUpdate (Atualização de incidente)
// ============================================
model IncidentUpdate {
  id        String   @id @default(cuid())
  message   String
  status    String
  createdAt DateTime @default(now()) @map("created_at")

  // Relacionamento com Incident
  incidentId String   @map("incident_id")
  incident   Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)

  @@index([incidentId])
  @@map("incident_updates")
}

// ============================================
// MODELO: MaintenanceWindow (Janela de Manutenção)
// ============================================
model MaintenanceWindow {
  id          String   @id @default(cuid())
  name        String // Nome da manutenção (ex: "Deploy v2.0")
  description String? // Descrição opcional
  startTime   DateTime @map("start_time") // Início da manutenção
  endTime     DateTime @map("end_time") // Fim da manutenção
  active      Boolean  @default(true) // Se está ativa (pode ser desativada manualmente)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Tipo de janela: "scheduled" (agendada) ou "emergency" (emergência)
  type String @default("scheduled")

  // Opções de silenciamento
  suppressAlerts    Boolean @default(true) @map("suppress_alerts") // Não enviar alertas
  suppressIncidents Boolean @default(true) @map("suppress_incidents") // Não criar incidentes
  showOnStatusPage  Boolean @default(true) @map("show_on_status_page") // Mostrar na status page

  // Relacionamento com Team
  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Relacionamentos
  monitors MaintenanceMonitor[]

  @@index([teamId])
  @@index([startTime, endTime])
  @@index([active])
  @@map("maintenance_windows")
}

// ============================================
// MODELO: MaintenanceMonitor (Monitores afetados)
// ============================================
model MaintenanceMonitor {
  id String @id @default(cuid())

  // Relacionamento com MaintenanceWindow
  maintenanceId String            @map("maintenance_id")
  maintenance   MaintenanceWindow @relation(fields: [maintenanceId], references: [id], onDelete: Cascade)

  // Relacionamento com Monitor
  monitorId String  @map("monitor_id")
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@unique([maintenanceId, monitorId])
  @@index([maintenanceId])
  @@index([monitorId])
  @@map("maintenance_monitors")
}
